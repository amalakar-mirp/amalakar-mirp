#include <iostream>
using namespace std;
int main() 
{
int n, number;
int max, min;
cout<<"enter number of numbers"<<endl;
cin>>n;
for(int i=0;i<n;i++) 
{
cout<<"enter number"<<endl;
cin>>number;
if(i==0)
{
max=number;
min=number;
continue;
}
if(number>max)
max=number;
if(number<min)
min=number;
}
cout<<"the largest number= "<<max<<endl;
cout<<"the smallest number= "<<min<<endl;
return 0;
}
